#!/bin/bash
echo -n "" | tee ${1:-scryer-prolog}-result.n3
for f in *.pl
do
    if [ "$f" != "heisenberg.pl" ]
    then
        echo "# running $f" | tee -a ${1:-scryer-prolog}-result.n3
        ${1:-scryer-prolog} "${@:2}" -g run,halt heisenberg.pl "$f" | tee -a ${1:-scryer-prolog}-result.n3
        echo "" | tee -a ${1:-scryer-prolog}-result.n3
    fi
done
